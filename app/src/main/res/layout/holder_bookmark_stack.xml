<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="holder"
            type="com.o2.domain.model.BookmarkStack" />

        <variable
            name="eventListener"
            type="com.o2.check_bookmark_android.ui.home.HomeActionHandler" />
    </data>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            style="@style/Theme.AppCompat.TextView.Notification.Button.Positive"
            textVisible="@{holder.bookmarkStacks[0].title}"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:background="@drawable/custom_green02_radius16"
            android:ellipsize="end"
            android:maxLines="1"
            android:minHeight="50dp"
            android:text="@{holder.bookmarkStacks[0].title}" />

        <TextView
            style="@style/Theme.AppCompat.TextView.Notification.Button.Positive"
            textVisible="@{holder.bookmarkStacks[1].title}"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_green03_radius16"
            android:ellipsize="end"
            android:maxLines="1"
            android:minHeight="50dp"
            android:text="@{holder.bookmarkStacks[1].title}" />

        <TextView
            style="@style/Theme.AppCompat.TextView.Notification.Button.Positive"
            textVisible="@{holder.bookmarkStacks[2].title}"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="15dp"
            android:background="@drawable/custom_green04_radius16"
            android:ellipsize="end"
            android:maxLines="1"
            android:minHeight="50dp"
            android:text="@{holder.bookmarkStacks[2].title}" />

        <TextView
            style="@style/Theme.AppCompat.TextView.Notification.Button.Positive"
            textVisible="@{holder.bookmarkStacks[3].title}"
            android:layout_width="300dp"
            android:layout_height="80dp"
            android:background="@drawable/custom_green01_radius16"
            android:ellipsize="end"
            android:maxLines="1"
            android:minHeight="50dp"
            android:text="@{holder.bookmarkStacks[3].title}" />
    </LinearLayout>

</layout>

